package com.arunsir.problems;


	
public class Task01 {
	
	
	//common prefix
	public static String commonPrefix(String[] strArr) {
		System.out.println(strArr[0].substring(0, 2));
		if(strArr[0].substring(0, 2).equals(strArr[1].substring(0, 2).equals(strArr[2].substring(0, 2)))) {
			return strArr[0].substring(0, 2);
		}
		return "";
	}
	
	
	
	
	

	public static void main(String[] args) {
		
		String[] strArr01 = new String[] {"flower", "flow", "flight"};
		String s1 = commonPrefix(strArr01);
		System.out.println(s1);
	}

}

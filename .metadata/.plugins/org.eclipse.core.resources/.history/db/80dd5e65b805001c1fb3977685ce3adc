package com.arunsir.problems;

public class Task02 {

	//Task 02
	public static int lastWordLength(String s) {
		int length = 0;
		if(s.length() <= 1) {
			return s.length();
		}
		else if(s.length() > 1) {
			String[] strArr = s.split(" ");
			for(int i = strArr.length; i > 0; i--) {
				length = strArr[i].length();
				break;
			}
		}
		return length;
	}
	
	
	
	
	public static void main(String[] args) {
		
		lastWordLength("hello world")

	}

}
